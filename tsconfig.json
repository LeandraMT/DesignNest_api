{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "./src", 
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true, 
        "esModuleInterop": true, 
        "skipLibCheck": true 
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
